// Zed settings
{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "o1"
    },
    "version": "2"
  },
  "vim_mode": false,
  "ui_font_size": 12.5,
  "buffer_font_size": 12.5,
  "buffer_font_family": "DepartureMono Nerd Font",
  "ui_font_family": "DepartureMono Nerd Font",
  "current_line_highlight": "all",
  "buffer_font_features": {
    "liga": true
  },
  "theme": {
    "mode": "system",
    "light": "Pico8 Picotron (Zep Editor)",
    "dark": "macOS Classic Dark"
  },
  "show_whitespaces": "boundary",
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 12,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "never"
    }
  },
  "format_on_save": "on",
  "lsp": {
    "terraform-ls": {
      "initialization_options": {
        "experimentalFeatures": {
          "prefillRequiredFields": true,
          "validateOnSave": true
        }
      }
    }
  }
}
