// Zed settings
{
  "show_edit_predictions": false,
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gemini-2.5-pro"
    },
    "version": "2"
  },
  "vim_mode": false,
  "ui_font_size": 13.5,
  "buffer_font_size": 12.5,
  "buffer_font_family": "DepartureMono Nerd Font",
  "ui_font_family": "DepartureMono Nerd Font",
  "current_line_highlight": "all",
  "buffer_font_features": {
    "liga": true
  },
  "theme": {
    "mode": "system",
    "light": "macOS Classic Light",
    "dark": "macOS Classic Dark"
  },
  "show_whitespaces": "boundary",
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 12,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "never"
    }
  },
  "format_on_save": "on",
  "lsp": {
    "terraform-ls": {
      "initialization_options": {
        "experimentalFeatures": {
          "prefillRequiredFields": true,
          "validateOnSave": true
        }
      }
    },
    "lua-language-server": {
      "initialization_options": {
        "workspaceFolder": "${workspaceFolder}"
      }
    }
  },
  "languages": {
    "Lua": {
      "format_on_save": "off" // This will disable format on save for Lua files
    }
  },
  "show_completions_on_input": false
}
